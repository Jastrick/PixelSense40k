<s:SurfaceWindow x:Class="PixelSense40k.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="PixelSense40k"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="104" />
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="PixelSense 40K" Grid.Row="0" HorizontalAlignment="Center" FontSize="104" FontFamily="Resources/#Caslon Antique"/>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <s:SurfaceButton Name="UVloader" Grid.Row ="0" Content="Unit Visualizer" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoadUV"/>
        <s:SurfaceButton Name="MDLoader" Grid.Row ="1" Content="Movement Demo" HorizontalAlignment="Center" VerticalAlignment="Center" Click="LoadMD"/>
        </Grid>     
    </Grid>
</s:SurfaceWindow>