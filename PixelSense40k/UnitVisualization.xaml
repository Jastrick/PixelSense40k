<s:TagVisualization x:Class="PixelSense40k.UnitVisualization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Loaded="UnitVisualization_Loaded"
    Height="400"
    Width="300">
    <Grid>
            <Rectangle Name="myRectangle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <Label Name = "UnitName" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Image Name="Photo" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Name="Faction" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

    </Grid>
</s:TagVisualization>
